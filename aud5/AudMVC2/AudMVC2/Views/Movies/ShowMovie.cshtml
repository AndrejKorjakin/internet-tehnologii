@model AudMVC2.ViewModels.MovieRentalViewModel
@{
    ViewBag.Title = "ShowMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Film: @Model.Movie.Name</h2>
<h3>Rating: @Model.Movie.Rating</h3>
<span>Download from <a href="http://@Model.Movie.DownloadURL" target="_blank">HERE</a></span>
<h3>Clients</h3>
<ul>
    @{
        int i = 0;
        foreach (var client in Model.Clients)
        {
            <li>@Html.ActionLink(client.Name, "ShowClient", new {id = i++})</li>
        }
    }
</ul>