@model IEnumerable<Aud3MVC.Models.Movie>
@{
    ViewBag.Title = "GetAllMovies";
}

<h2>Movies:</h2>
<ul>
    @{
        foreach (var movie in Model)
        {
            <li>
                <h4>
                    <img src="@movie.ImageUrl" style="max-width: 100px; max-height: 100px" />
                    @Html.ActionLink(movie.Name, "ShowMovie", new { id = movie.Id })
                    |
                    @Html.ActionLink("Edit", "EditMovie", new { id = movie.Id })
                    |
                    @Html.ActionLink("Delete", "DeleteMovie", new { id = movie.Id })
                </h4>
            </li>
        }
    }
</ul>